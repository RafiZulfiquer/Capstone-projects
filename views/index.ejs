<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>API Capstone Project</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
</head>
<body>

<div class="h">
<br>
<h1>Daily Exchange Rates</h1>
<br>

<div class="container">
    <div class="row">
        <div class="card col-4"> 
            <h3> Date: <%= date %></h3>
            <h3> Base currency: <%= base %></h3>
        </div>


        <div class="card col-8"> 
            
            <h3> Rates: </h4>
                
            <ul class="ratess">

                <% Object.entries(rates).forEach(([currency, rate]) =>  {%>
                <li>
                    <strong> <%= currency %>: </strong> <%= rate %>  
                </li>
                
                <% }) %>
            </ul>
        </div>


    </div>
</div>

<hr>

<div class="input">

    <div class="container">
        <div class="row">
            <div class="col-10">

                <form action="/submit" method="post">

                    <label for="input">YYYY-MM-DD</label>
                    <input type="text" id="input" name="date" placeholder="Enter a date in this format">
                    <input id="get" type="submit" value="GET">

                </form>
            </div>
        </div>
    </div>
</div>


    
</body>
</html>



